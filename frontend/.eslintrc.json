{
    "env": {
        "browser": true,
        "es6": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["./node_modules", "./src/playground"],
    "rules": {
        "linebreak-style": ["error","windows"]
    }
}
